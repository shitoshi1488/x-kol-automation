# X KOL Automation System - Environment Configuration
# Copy this file to .env and fill in your actual values

# Twitter API Credentials (Standard v2 access)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# OpenAI API Key (for GPT-4 content generation)
OPENAI_API_KEY=your_openai_api_key_here

# Database Connection (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/x_kol

# Redis (for caching and job queues)
REDIS_URL=redis://localhost:6379

# Solana RPC Connection
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# Optional: Private key for trading (KEEP SECURE!)
PRIVATE_KEY=your_encrypted_private_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: Additional Configuration
# LOG_LEVEL=info
# ENABLE_TRADING=false
# MAX_ENGAGEMENT_RATE=2